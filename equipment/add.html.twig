{% extends 'base.html.twig' %}

{% block title %}Ajouter un équipement pour {{ character.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Ajouter un équipement pour {{ character.name }}</h1>

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            <div class="mb-3">
                {{ form_row(form.name, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(form.type, {
                    'attr': {'class': 'form-select'}
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(form.power, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(form.description, {
                    'attr': {'class': 'form-control'}
                }) }}
            </div>

            <button type="submit" class="btn btn-primary">Ajouter l'équipement</button>
            <a href="{{ path('app_equipment_by_character', {'id': character.id}) }}" class="btn btn-secondary">Retour</a>
        {{ form_end(form) }}
    </div>
{% endblock %}